<resources>

    <!-- Base application theme. -->
    <style name="DarkAppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Title">
        <item name="android:textSize">38sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="LargeHeader">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="MediumHeader">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RegularText">
    </style>

    <style name="LargePlaceholderTitle">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">sans</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="SmallPlaceholderTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">sans</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
